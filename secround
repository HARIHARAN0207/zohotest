
import java.util.*;
public class Main
{
  public static void main(String[] args) {
    Scanner scan=new Scanner(System.in);
    String str=scan.next(),temp=null;
    int n=str.length();
    temp=str.substring(n/2,n)+str.substring(0,n/2);
    for(int i=0;i<n;i++)
    {
      for(int j=0;j<n-i-1;j++)
        {
           System.out.print(" ");
        }
      for(int j=0;j<=i;j++)
        {
           System.out.print(temp.charAt(j));
        }
   System.out.println();
}
}
}
